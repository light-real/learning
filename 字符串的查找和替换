#include<iostream>
using namespace std;
#include<string>

//查找
void test01(){
    // find()和rfind()的区别，find()从左往右查找 rfind()从右往左查找
    
    // find() 函数
    string str = "abcdefg";
    int pos = str.find("de");  //返回找到字符串的下标  3 
    //如果没找到，返回-1

    
    cout<<pos<<endl;
}

//替换
void test02(){
    string str = "abcdefg";
    str.replace(1,3,"1111");  //从1号位置起，三个字符，替换为"1111"
    cout<<str<<endl;
}

int main(){
    // test01();
    test02();
    return 0;
}
