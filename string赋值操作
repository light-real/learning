#include<iostream>
using namespace std;
#include<string>

void test01(){
    string str1;
    str1 = "hello world";
    cout<<"str1 is "<<str1<<endl;

    string str2;
    str2 = str1;
    cout<<"str2 is "<<str2<<endl;

    string str3;
    str3 = 'c';
    cout<<"str3 is "<<str3<<endl;

    string str4;
    str4.assign("Hello C++");
    cout<<"str4 is "<<str4<<endl;

    string str5;
    str5.assign("Hello,C++",6);  //拿到前6个字符
    cout<<"str5 is "<<str5<<endl;
    
    string str6;
    str6.assign(str5);   //将str5赋给str6
    cout<<"str6 is "<<str6<<endl;

    string str7;
    str7.assign(10,'w');  //生成是个w
    cout<<"str7 is"<<str7<<endl;
}

int main(){
    test01();
    return 0;
}
