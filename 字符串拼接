#include<iostream>
using namespace std;
#include<string>

void test01(){
    string str1 = "我";
    str1 += "爱看书";
    cout<<str1<<endl;

    str1 += ':';
    cout<<str1<<endl;

    string str2 = "围城";

    str1 += str2;

    cout<<str1<<endl;

    string str3 = "I";
    str3.append("love");
    cout<<str3<<endl;
    
    str3.append(str2);  //将str2追加进来
    cout<<str3<<endl;

    string str4  = "LOL 将夜";
    str3.append(str4,3,5);  //追加 可以指定范围 参数2从哪个位置开始 参数三截取的字符个数

    cout<<str3<<endl;
    

    
    
    
}

int main(){
    test01();
    return 0;
}
